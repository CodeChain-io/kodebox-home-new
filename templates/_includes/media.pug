mixin media-item(isShown, icon, title, media, description, link, content)
  if (isShown)
    .col-12.wow.fadeIn
      a(href=link, target='_blank')
        .media-item.py-3.d-flex
          .media-word.d-inline-block.mr-auto
            p.media-title.mb-1
              | #{title}
            p.description.media-date
              | [#{description}] #{media}
            p.description.media-content
              | #{content}
          img.ml-3(src=icon)
  else
    .col-12.hidden-media
      a(href=link, target='_blank')
        .media-item.py-3.d-flex
          .media-word.d-inline-block.mr-auto
            p.media-title.mb-1
              | #{title}
            p.description.media-date
              | [#{description}] #{media}
          img.ml-3(src=icon)
