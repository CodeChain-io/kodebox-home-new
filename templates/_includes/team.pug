mixin team-iteam(imgSrc, name, rank, mediumLink, githubLink, twitterLink)
  .col-lg-4.col-md-6.wow.fadeIn.mb-3
    .item
      .team-img-container.mx-auto
        img.team-img(src=imgSrc, alt='')
      .team-caption
        p.name.mt-3.mb-0
          | #{name}
        p.description.rank.mb-1
          | #{rank}
        .line.my-2.mx-auto
        ul.list-inline.list-team-social
          li.list-inline-item
            if (mediumLink)
              a(href=mediumLink, target='_blank')
                img.active(src='img/team/medium.png')
            else
              img.inactive(src='img/team/medium.png')
          li.list-inline-item
            if (githubLink)
              a(href=githubLink, target='_blank')
                img.active(src='img/team/github.png')
            else if (twitterLink)
              a(href=twitterLink, target='_blank')
                img.active(src='img/team/twitter.png')
            else
              img.inactive(src='img/team/github.png')
